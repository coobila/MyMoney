<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <stroke
        android:width="1dp"
        android:color="#B6B4B4" /> <!-- 設定邊框顏色和寬度 -->
    <padding
        android:left="10dp"
        android:top="10dp"
        android:right="10dp"
        android:bottom="10dp" /> <!-- 設定內部邊距 -->
    <corners android:radius="8dp" /> <!-- 設定圓角半徑 -->
    <solid android:color="#FFFFFF" /> <!-- 設定背景顏色 -->
</shape>
