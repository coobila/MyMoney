<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="top"
    android:orientation="vertical"
    android:background="@drawable/mainback6"
    android:paddingTop="8dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TableLayout
        android:gravity="top|center_horizontal"
        android:id="@+id/tableLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp">
        <TableRow
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="轉帳日期："/>
            <TableRow
                android:id="@+id/tableRow62"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TableRow
                    android:id="@+id/tableRow7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/DATA_DATE"
                        android:layout_width="179dp"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:background="@drawable/custom_edittext_background"/>
                </TableRow>
                <TableRow
                    android:gravity="center"
                    android:id="@+id/tableRow11"
                    android:layout_width="55dp"
                    android:layout_height="40dp">
                    <TextView
                        android:textSize="16sp"
                        android:textColor="#000000"
                        android:id="@+id/WeekView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="星期日"/>
                </TableRow>
            </TableRow>
        </TableRow>
        <TableRow
            android:gravity="center"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">
            <TextView
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="轉出項目："/>
            <Spinner
                android:id="@+id/SOURCE_ITEM"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:cacheColorHint="#00000000"/>
        </TableRow>
        <TableRow
            android:gravity="center"
            android:id="@+id/tableRow2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">
            <TextView
                android:textSize="16sp"
                android:textColor="#000000"
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="轉出帳戶："/>
            <Spinner
                android:id="@+id/VSOURCE_ITEM"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:cacheColorHint="#00000000"
                android:theme="@style/CustomSpinnerStyle"
                android:background="@drawable/spinner_back"/>
        </TableRow>
        <TableRow
            android:gravity="center"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">
            <TextView
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="轉入項目："/>
            <Spinner
                android:id="@+id/OBJECT_ITEM"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:theme="@style/CustomSpinnerStyle"
                android:background="@drawable/spinner_back"/>
        </TableRow>
        <TableRow
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">
            <TextView
                android:textSize="16sp"
                android:textColor="#000000"
                android:id="@+id/VtextView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="轉入帳戶："/>
            <Spinner
                android:id="@+id/VOBJECT_ITEM"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:theme="@style/CustomSpinnerStyle"
                android:background="@drawable/spinner_back"/>
        </TableRow>
        <TableRow
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">
            <TextView
                android:textSize="16sp"
                android:textColor="#000000"
                android:id="@+id/VEXCHANGE"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="轉帳金額："/>
            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/INOUT_MOUNT"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:hint="請輸入金額"
                    android:singleLine="true"
                    android:background="@drawable/custom_edittext_background"/>
                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <Button
                        android:id="@+id/DetailInput"
                        android:layout_width="105dp"
                        android:layout_height="45dp"
                        android:text="匯：30.1235"
                        android:onClick="ShowDetailInput"/>
                </TableRow>
            </TableRow>
        </TableRow>
        <TableRow
            android:gravity="center"
            android:id="@+id/tableRow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">
            <TextView
                android:textSize="16sp"
                android:textColor="#000000"
                android:id="@+id/VDATA_NOTE"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="摘要記錄："/>
            <TableRow
                android:id="@+id/tableRow12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/DATA_NOTE"
                    android:layout_width="195dp"
                    android:layout_height="wrap_content"
                    android:hint="請點擊輸入摘要記錄"
                    android:singleLine="true"
                    android:background="@drawable/custom_edittext_background"/>
                <TableRow
                    android:id="@+id/tableRow13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <Button
                        android:id="@+id/SOften"
                        android:layout_width="40dp"
                        android:layout_height="45dp"
                        android:text="..."
                        android:onClick="ShowOftenSelect"/>
                </TableRow>
            </TableRow>
        </TableRow>
        <TableRow
            android:gravity="center"
            android:id="@+id/ShowPayCollFrame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">
            <TextView
                android:textSize="16sp"
                android:textColor="#000000"
                android:id="@+id/VPAY_COLL_NAME"
                android:visibility="visible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="收  付  人："/>
            <TableRow
                android:id="@+id/tableRow14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/PAY_COLL_NAME"
                    android:visibility="visible"
                    android:layout_width="195dp"
                    android:layout_height="wrap_content"
                    android:hint="請點擊輸入收付人"
                    android:singleLine="true"
                    android:background="@drawable/custom_edittext_background"/>
                <TableRow
                    android:id="@+id/tableRow15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <Button
                        android:id="@+id/SCollPayName"
                        android:layout_width="40dp"
                        android:layout_height="45dp"
                        android:text="..."
                        android:onClick="ShowCollPalSelect"/>
                </TableRow>
            </TableRow>
        </TableRow>
        <TableRow
            android:gravity="center"
            android:id="@+id/tableRow3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">
            <TextView
                android:textSize="16sp"
                android:textColor="#000000"
                android:id="@+id/TextView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="手  續  費："/>
            <Spinner
                android:id="@+id/CHARGE_ITEM"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:theme="@style/CustomSpinnerStyle"
                android:background="@drawable/spinner_back"/>
        </TableRow>
        <TableRow
            android:gravity="center"
            android:id="@+id/tableRow4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">
            <TextView
                android:textSize="16sp"
                android:textColor="#000000"
                android:id="@+id/VCHARGE_MOUNT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="金        額："/>
            <EditText
                android:id="@+id/CHARGE_MOUNT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:singleLine="true"
                android:background="@drawable/custom_edittext_background"/>
        </TableRow>
        <TableRow
            android:gravity="center"
            android:id="@+id/tableRow5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">
            <Button
                android:textSize="14dp"
                android:id="@+id/VOICE_INPUT"
                android:visibility="invisible"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="語音輸入"
                android:onClick="VoiceInput"/>
            <Spinner
                android:id="@+id/PROJECT_ID"
                android:visibility="gone"
                android:layout_height="wrap_content"
                android:theme="@style/CustomSpinnerStyle"
                android:background="@drawable/spinner_back"/>
            <TableRow
                android:gravity="center"
                android:id="@+id/tableRow8"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">
                <Button
                    android:textSize="14dp"
                    android:id="@+id/SaveNext"
                    android:layout_width="79dp"
                    android:layout_height="wrap_content"
                    android:text=" 下一筆 "
                    android:onClick="SaveDataNext"/>
                <TableRow
                    android:id="@+id/tableRow9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <Button
                        android:textSize="14sp"
                        android:id="@+id/SaveExit"
                        android:layout_width="78dp"
                        android:layout_height="wrap_content"
                        android:text="存  入"
                        android:onClick="SaveDataExit"/>
                </TableRow>
                <TableRow
                    android:id="@+id/tableRow10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <Button
                        android:textSize="14sp"
                        android:id="@+id/Close"
                        android:layout_width="78dp"
                        android:layout_height="wrap_content"
                        android:text="離  開"
                        android:onClick="CloseReturn"/>
                </TableRow>
            </TableRow>
        </TableRow>
    </TableLayout>
</LinearLayout>
