<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/mainback3"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TableLayout
        android:background="#f98421"
        android:layout_width="match_parent"
        android:layout_height="2dp"/>
    <TableLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp">
        <TableRow
            android:gravity="center"
            android:id="@+id/tableRow7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:textSize="14dp"
                android:id="@+id/Pm"
                android:background="@drawable/bt1"
                android:layout_width="70dp"
                android:layout_height="36dp"
                android:text="上一月"
                android:onClick="PmClick"/>
            <TableRow
                android:gravity="center"
                android:id="@+id/tableRow8"
                android:layout_width="175dp"
                android:layout_height="39dp">
                <TextView
                    android:textSize="14dp"
                    android:textColor="#cc0000"
                    android:id="@+id/YearData"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2011/08"/>
                <TextView
                    android:textSize="14dp"
                    android:textColor="#cc0000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" 月份收入項目統計"/>
            </TableRow>
            <TableRow
                android:id="@+id/tableRow9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <Button
                    android:textSize="14dp"
                    android:id="@+id/Dm"
                    android:background="@drawable/bt1"
                    android:layout_width="70dp"
                    android:layout_height="36dp"
                    android:text="下一月"
                    android:onClick="DmClick"/>
            </TableRow>
        </TableRow>
    </TableLayout>
    <TableLayout
        android:id="@+id/tableLayout2"
        android:background="#d4c282"
        android:layout_width="match_parent"
        android:layout_height="2dp"/>
    <TableRow
        android:id="@+id/top1"
        android:background="#ecdca3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="16dp"
            android:textColor="#000000"
            android:gravity="center"
            android:id="@+id/textView3"
            android:layout_width="220dp"
            android:layout_height="30dp"
            android:text="  項目名稱"/>
        <TextView
            android:textSize="16dp"
            android:textColor="#000000"
            android:gravity="center"
            android:id="@+id/textView4"
            android:paddingRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="收入總額"/>
    </TableRow>
    <TableLayout
        android:id="@+id/top2"
        android:background="#d4c282"
        android:layout_width="match_parent"
        android:layout_height="2dp"/>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/showchart"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TabWidget
            android:id="@android:id/tabs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <FrameLayout
        android:id="@+id/frameLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ListView
            android:id="@+id/DataList"
            android:background="#7feeeeee"
            android:layout_width="match_parent"
            android:layout_height="@dimen/Report02Height"
            android:cacheColorHint="#00000000"
            android:divider="#d4c282"
            android:dividerHeight="1px"/>
    </FrameLayout>
    <Spinner
        android:id="@+id/ItemNoteRec"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TableLayout
        android:background="#d4c282"
        android:layout_width="match_parent"
        android:layout_height="2dp"/>
    <TableRow
        android:background="#ecdca3"
        android:paddingLeft="5dp"
        android:paddingTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="38dp">
        <TextView
            android:textSize="16dp"
            android:textColor="#334895"
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:text="收入總額："/>
        <TextView
            android:textSize="16dp"
            android:textColor="#334895"
            android:gravity="right"
            android:id="@+id/EndMountShow"
            android:paddingRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0"/>
    </TableRow>
    <TableLayout
        android:id="@+id/tableLayout21"
        android:background="#f98421"
        android:layout_width="match_parent"
        android:layout_height="2dp"/>
    <TableLayout
        android:id="@+id/tableLayout22"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TableRow
            android:id="@+id/tableRow4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="0dp">
            <CheckBox
                android:textSize="16dp"
                android:textColor="#8c5f18"
                android:id="@+id/SumSubMount"
                android:layout_width="175dp"
                android:layout_height="wrap_content"
                android:text="不顯示子項目統計"/>
            <CheckBox
                android:textSize="16dp"
                android:textColor="#8c5f18"
                android:id="@+id/SumOtherMount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="統計業外收入"/>
        </TableRow>
    </TableLayout>
</LinearLayout>