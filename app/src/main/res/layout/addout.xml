<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="top|center_horizontal"
    android:orientation="vertical"
    android:background="@drawable/mainback5"
    android:paddingTop="8dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:gravity="center"
        android:id="@+id/linearLayout2"
        android:paddingTop="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TableLayout
            android:id="@+id/MainFrame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TableRow
                android:gravity="center"
                android:id="@+id/tableRow21"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp">
                <TextView
                    android:textSize="16dp"
                    android:textColor="#000000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="支出日期："/>
                <TableRow
                    android:id="@+id/tableRow3"
                    android:paddingTop="1dp"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/DATA_DATE"
                        android:layout_width="179dp"
                        android:layout_height="wrap_content"
                        android:singleLine="true" />

                    <TableRow
                        android:gravity="center"
                        android:id="@+id/tableRow4"
                        android:layout_width="55dp"
                        android:layout_height="40dp">
                        <TextView
                            android:textSize="16dp"
                            android:textColor="#000000"
                            android:id="@+id/WeekView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="星期日"/>
                    </TableRow>
                </TableRow>
            </TableRow>
            <TableRow
                android:gravity="center"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp">
                <TextView
                    android:textSize="16dp"
                    android:textColor="#000000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="使用項目："/>
                <Spinner
                    android:id="@+id/SOURCE_ITEM"
                    android:layout_width="230dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/custom_spinner_background"/>
            </TableRow>
            <TableRow
                android:gravity="center"
                android:id="@+id/tableRow22"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp">
                <TextView
                    android:textSize="16dp"
                    android:textColor="#000000"
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="使用項目："/>
                <Spinner
                    android:id="@+id/VSOURCE_ITEM"
                    android:layout_width="230dp"
                    android:layout_height="wrap_content"/>
            </TableRow>
            <TableRow
                android:gravity="center"
                android:id="@+id/tableRow23"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp">
                <TextView
                    android:textSize="16dp"
                    android:textColor="#000000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="支出項目："/>
                <Spinner
                    android:id="@+id/OBJECT_ITEM"
                    android:layout_width="230dp"
                    android:layout_height="wrap_content"/>
            </TableRow>
            <TableRow
                android:gravity="center"
                android:id="@+id/tableRow24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp">
                <TextView
                    android:textSize="16dp"
                    android:textColor="#000000"
                    android:id="@+id/VtextView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="子  項  目："/>
                <Spinner
                    android:id="@+id/SUB_OBJECT_ITEM"
                    android:layout_width="230dp"
                    android:layout_height="wrap_content"/>
            </TableRow>
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/linearLayout15"
                android:paddingLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TableRow
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="16dp"
                        android:textColor="#000000"
                        android:id="@+id/VEXCHANGE"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="支出金額："/>
                    <TableRow
                        android:layout_width="152dp"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/INOUT_MOUNT"
                            android:layout_width="152dp"
                            android:layout_height="wrap_content"
                            android:hint="請點擊輸入金額"
                            android:singleLine="true"
                            android:text="0"
                            android:background="@drawable/custom_edittext_background"/>
                    </TableRow>
                    <Button
                        android:id="@+id/DetailInput"
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:text="詳細備註"
                        android:onClick="ShowDetailInput"/>
                </TableRow>
            </LinearLayout>
            <TableRow
                android:gravity="center"
                android:id="@+id/ShowInvoiceFrame"
                android:visibility="visible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp">
                <TextView
                    android:textSize="16dp"
                    android:textColor="#000000"
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="發票號碼："/>
                <EditText
                    android:id="@+id/INVOICE_NO"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="請點擊輸入發票號碼"
                    android:singleLine="true"/>
            </TableRow>
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/linearLayout1"
                android:paddingLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TableRow
                    android:gravity="center"
                    android:id="@+id/tableRow26"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="16dp"
                        android:textColor="#000000"
                        android:id="@+id/VDATA_NOTE"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="摘要記錄："/>
                    <TableRow
                        android:id="@+id/tableRow1"
                        android:layout_width="195dp"
                        android:layout_height="wrap_content">
                        <EditText
                            android:id="@+id/DATA_NOTE"
                            android:layout_width="195dp"
                            android:layout_height="wrap_content"
                            android:hint="請點擊輸入摘要記錄"
                            android:singleLine="true"/>
                    </TableRow>
                    <Button
                        android:id="@+id/SOften"
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:text="..."
                        android:onClick="ShowOftenSelect"/>
                </TableRow>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/ShowPayCollFrame"
                android:paddingLeft="5dp"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TableRow
                    android:gravity="center"
                    android:id="@+id/tableRow27"
                    android:visibility="visible"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="16dp"
                        android:textColor="#000000"
                        android:id="@+id/VPAY_COLL_NAME"
                        android:visibility="visible"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="收  付  人："/>
                    <TableRow
                        android:id="@+id/tableRow2"
                        android:layout_width="195dp"
                        android:layout_height="wrap_content">
                        <EditText
                            android:id="@+id/PAY_COLL_NAME"
                            android:visibility="visible"
                            android:layout_width="195dp"
                            android:layout_height="wrap_content"
                            android:hint="請點擊輸入收付人"
                            android:singleLine="true"/>
                    </TableRow>
                    <Button
                        android:id="@+id/SCollPayName"
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:text="..."
                        android:onClick="ShowCollPalSelect"/>
                </TableRow>
            </LinearLayout>
            <TableRow
                android:gravity="center"
                android:id="@+id/ShowProjectFrame"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp">
                <TextView
                    android:textSize="16dp"
                    android:textColor="#000000"
                    android:id="@+id/VPROJECT_NAME"
                    android:visibility="visible"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="專案名稱："/>
                <Spinner
                    android:id="@+id/PROJECT_NAME"
                    android:visibility="visible"
                    android:layout_width="230dp"
                    android:layout_height="wrap_content"/>
            </TableRow>
        </TableLayout>
    </LinearLayout>
    <TableRow
        android:gravity="center"
        android:id="@+id/tableRow5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:textSize="14dp"
            android:id="@+id/VOICE_INPUT"
            android:visibility="invisible"
            android:layout_width="84dp"
            android:layout_height="wrap_content"
            android:text="語音輸入"
            android:onClick="VoiceInput"/>
        <Spinner
            android:id="@+id/PROJECT_ID"
            android:visibility="gone"
            android:layout_height="wrap_content"/>
        <TableRow
            android:gravity="center"
            android:id="@+id/tableRow8"
            android:layout_width="240dp"
            android:layout_height="wrap_content">
            <Button
                android:textSize="14dp"
                android:id="@+id/SaveNext"
                android:layout_width="77dp"
                android:layout_height="wrap_content"
                android:text=" 下一筆 "
                android:onClick="SaveDataNext"/>
            <TableRow
                android:id="@+id/tableRow9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <Button
                    android:textSize="14dp"
                    android:id="@+id/SaveExit"
                    android:layout_width="77dp"
                    android:layout_height="wrap_content"
                    android:text=" 存  入 "
                    android:onClick="SaveDataExit"/>
            </TableRow>
            <TableRow
                android:id="@+id/tableRow10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <Button
                    android:textSize="14dp"
                    android:id="@+id/Close"
                    android:layout_width="77dp"
                    android:layout_height="wrap_content"
                    android:text=" 離  開 "
                    android:onClick="CloseReturn"/>
            </TableRow>
        </TableRow>
    </TableRow>
</LinearLayout>
